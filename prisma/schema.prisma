generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  email      String  @unique 
  userName   String  @unique
  profileImg String?
  password   String
  role       Role    @default(USER)
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
}

enum Role {
  ADMIN
  USER
  MAINADMIN
  COMPANY
}


model Post {
  id              String           @id @default(cuid())
  title           String
  price           String
  views           Int      @default(0)
  description     String
  status          POSTStatus @default(NEW)
  images          String[]
  category        String
  subCategory     String
  subSubCategory  String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
enum POSTStatus {
NEW
USED
OLD
}
model Product{
  id              String           @id @default(cuid())
  title           String
  price           String
  views           Int      @default(0)
  description     String
  status          ProductStatus @default(NEW)
  images          String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum ProductStatus {
  NEW
  OLD
}




